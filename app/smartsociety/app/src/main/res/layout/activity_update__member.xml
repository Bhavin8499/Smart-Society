<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Update_Member">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/my_tv"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/add_mem_label"
            android:background="@drawable/gradientbackground"
            android:text="UPDATE MEMBER"
            android:gravity="right"
            android:textSize="30dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/upperofbackground">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/my_tv"
                android:text="Name:"
                android:textSize="15dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Name"
                android:id="@+id/upd_mem_name"
                style="@style/my_et"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/upperofbackground">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/my_tv"
                android:text="Date Of Birth:"
                android:textSize="15dp"
                />
            <DatePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:id="@+id/upd_mem_bdate"
                android:spinnersShown="true"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/upperofbackground">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/my_tv"
                android:text="Gender:"
                android:textSize="15dp"
                />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/upd_mem_gen">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MALE"
                    android:id="@+id/male"
                    android:textSize="10dp"
                    android:layout_weight="1"
                    style="@style/my_et"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/female"
                    android:text="FEMALE"
                    android:textSize="10dp"
                    android:layout_weight="1"
                    style="@style/my_et"/>
            </RadioGroup>
        </LinearLayout>
        <Button
            android:layout_width="200dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="7dp"
            android:layout_height="wrap_content"
            android:text="UPDATE"
            android:id="@+id/upd_mem_btn"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:background="@drawable/button_round_corner"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="@android:color/background_dark"
            android:textAllCaps="false"

            />
    </LinearLayout>
</ScrollView>