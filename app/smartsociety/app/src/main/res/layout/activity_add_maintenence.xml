<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin.AddMaintanceActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/my_tv"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/gradientbackground"
        android:text="ADD BILL"
        android:gravity="right"
        android:textSize="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/upperofbackground">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/my_tv"
            android:text="Title:"
            android:textSize="15dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Title"
            android:id="@+id/maintenence_title"
            style="@style/my_btn"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/upperofbackground">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/my_tv"
            android:text="Amount:"
            android:textSize="15dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Amount"
            android:inputType="number"
            android:id="@+id/maintencence_amount"
            style="@style/my_btn"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/upperofbackground">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/my_tv"
            android:text="Date:"
            android:textSize="15dp"
            />
        <DatePicker
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/maintencence_date"
            android:spinnersShown="true"
            android:datePickerMode="spinner"

            />

    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="7dp"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/add_bill_btn"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:background="@drawable/button_round_corner"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="@android:color/background_dark"
        android:textAllCaps="false"

        />
</LinearLayout>