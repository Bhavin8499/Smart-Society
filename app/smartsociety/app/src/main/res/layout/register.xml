<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Register"
        android:orientation="vertical"
        android:background="@drawable/gradientbackground">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/upperofbackground">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/my_tv"
                android:text="First Name:"
                android:textSize="15dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="First Name"
                android:id="@+id/et_first_name"
                style="@style/my_btn"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/upperofbackground"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                style="@style/my_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Name:"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_last_name"
                style="@style/my_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Last Name" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/upperofbackground">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/my_tv"
                android:text="User Type:"
                android:textSize="15dp"
                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Select User Type"
                android:spinnerMode="dropdown"
                android:entries="@array/user_type"
                android:id="@+id/user_type"
                style="@style/my_et"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/upperofbackground"
            android:visibility="gone"
            android:id="@+id/subl_soci_code">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/my_tv"
                android:text="Society Code:"
                android:textSize="15dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Society Code"
                android:id="@+id/et_soci_code"
                style="@style/my_btn"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/upperofbackground"
            android:id="@+id/subl_soci_name">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/my_tv"
                android:text="Society Name:"
                android:textSize="15dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Society Name"
                android:id="@+id/et_soci_name"
                style="@style/my_btn"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/upperofbackground">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/my_tv"
                android:text="Address:"
                android:textSize="15dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Address"
                style="@style/my_btn"
                android:id="@+id/et_soci_addr"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/upperofbackground">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/my_tv"
                android:text="Email:"
                android:inputType="textEmailAddress"
                android:textSize="15dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="xyz123@abc.com"
                android:id="@+id/et_email"
                style="@style/my_btn"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/upperofbackground">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/my_tv"
                android:text="Password:"
                android:textSize="15dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:id="@+id/et_password"
                style="@style/my_btn"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/upperofbackground">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/my_tv"
                android:text="Confirm Password:"
                android:textSize="15dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:id="@+id/et_cn_password"
                style="@style/my_btn"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/upperofbackground">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/my_tv"
                android:text="Mobile No.:"
                android:textSize="15dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:id="@+id/et_mobile"
                style="@style/my_btn"
                />
        </LinearLayout>
        <Button
            android:layout_width="200dp"
            android:layout_marginBottom="7dp"
            android:layout_height="wrap_content"
            android:text="Register"
            android:id="@+id/register_btn"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:background="@drawable/button_round_corner"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/background_dark"
            android:textAllCaps="false"
            />
    </LinearLayout>
</ScrollView>